# .env.example
# Copy this file to .env and fill in your actual values

# === API Configuration ===
# Use the specific token provided by HackRX or generate your own for development
API_BEARER_TOKEN=e4b975d68599b231b42b0b2face528c5d0dflkdmfmffcfefefecfe

# === Pinecone Configuration ===
# Get these from your Pinecone dashboard
PINECONE_API_KEY=fake_pinecone_api_key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=hackrx-intelligent-query-system

# === PostgreSQL Configuration ===
# For local development with cloud database (RECOMMENDED)
DATABASE_URL=postgresql://hackrx_db_user:fakeone

# For local PostgreSQL (if you prefer local setup)
# DATABASE_URL=postgresql://hackrx_user:hackrx_password@localhost:5432/hackrx_db
# POSTGRES_USER=hackrx_user
# POSTGRES_PASSWORD=hackrx_password
# POSTGRES_DB=hackrx_db
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# === LLM Configuration ===
# Choose your LLM provider: "openai" or "google"
LLM_PROVIDER=google

# OpenAI API Key (for production deployment)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google AI Studio API Key (FREE tier for testing - RECOMMENDED)
GOOGLE_API_KEY=xxxxxxxxxxxx

# === Performance Tuning ===
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
MAX_CONTEXT_LENGTH=4000
MAX_TOKENS_PER_REQUEST=2000
ENABLE_TOKEN_COUNTING=true
